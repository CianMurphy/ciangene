#!/bin/bash

#rootODir=/scratch2/vyp-scratch2/ciangene
rootODir=/scratch2/vyp-scratch2/cian/
release=July2015
rootODir=${1-$rootODir}
release=${2-$release}
bDir=${rootODir}/UCLex_${release}/LDAK_gene_tests_all_phenos/

phenoFile=/scratch2/vyp-scratch2/cian/UCLex_${release}/Clean_pheno_subset_tk_depth_residuals

#### Data
ldak=/cluster/project8/vyp/cian/support/ldak/ldak.4.94
data=$rootODir/UCLex_${release}/allChr_snpStats_out
kinship=/cluster/project8/vyp/cian/data/UCLex/ciangene/scripts/Depth_maf_0.00001_callRate_0.00001
genes=/SAN/biomed/biomed14/vyp-scratch/cian/LDAK/genesldak_ref.txt

####### Parameters
#minMaf=0.000001	
#missing=0.7
minVar=1e-4
maxmaf=0.5
power=0 # rare variants arent upweighed with power = 0
minWeight=3 # genes need min this many variants to be included
overlap=NO # variants counted once per region, no overlapping transcripts
ignoreWeights=YES ## if YES, variants arent weighted for LD correction
partition=1
#######


### teckKin depthKin residuals as pheno
oDir=$bDir"/combined_depthkin_TechRes_${pheno}_${missing}_${minMaf}/"
rm -fr $oDir ; mkdir $oDir
$ldak --cut-genes $oDir --genefile $genes --bfile $data  --gene-buffer 20000 --ignore-weights $ignoreWeights --partition-length 2000000  --extract $extract --overlap $overlap --min-weight $minWeight

$ldak  --calc-genes-reml $oDir --bfile $data --pheno $phenoFile --mpheno $mPheno --ignore-weights $ignoreWeights --minvar $minVar --minobs $missing \
 --extract $extract --minmaf $minMaf --maxmaf $maxmaf --overlap $overlap --min-weight $minWeight  --power $power --partition $partition 


phenoFile=/scratch2/vyp-scratch2/cian/UCLex_${release}/Clean_pheno_subset

### normal pheno
oDir=$bDir"/base_${pheno}_${missing}_${minMaf}/"
rm -fr $oDir ; mkdir $oDir
$ldak --cut-genes $oDir --genefile $genes --bfile $data  --gene-buffer 20000 --ignore-weights $ignoreWeights --partition-length 2000000  --extract $extract --overlap $overlap --min-weight $minWeight

$ldak  --calc-genes-reml $oDir --bfile $data --pheno $phenoFile --mpheno $mPheno --ignore-weights $ignoreWeights --minvar $minVar --minobs $missing \
 --extract $extract --minmaf $minMaf --maxmaf $maxmaf --overlap $overlap --min-weight $minWeight  --power $power --partition $partition 



### perm
oDir=$bDir"/base_perm_${pheno}_${missing}_${minMaf}/"
rm -fr $oDir ; mkdir $oDir
$ldak --cut-genes $oDir --genefile $genes --bfile $data  --gene-buffer 20000 --ignore-weights $ignoreWeights --partition-length 2000000  --extract $extract --overlap $overlap --min-weight $minWeight

$ldak  --calc-genes-reml $oDir --bfile $data --pheno $phenoFile --mpheno $mPheno --ignore-weights $ignoreWeights --minvar $minVar --minobs $missing \
 --extract $extract --minmaf $minMaf --maxmaf $maxmaf --overlap $overlap --min-weight $minWeight  --power $power --partition $partition --permute YES

